{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
  },
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@app/*": [
        "*"
      ]
    }
  },
  "exclude": [
      "bin",
      "node_modules"
  ]
}